<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoomcar.prateek.faltu.activities.ComponentActivity">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/text_header"
        style="@style/text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_toolbar"
        android:padding="@dimen/app_padding" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_header"
        android:padding="@dimen/app_padding"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edit_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_username_normal"
            android:drawableRight="@drawable/ic_action_username_normal"
            android:hint="@string/hint_enter_first_name"
            android:text="dbhasvhfbahdbna,bvdhkgvafjbshfb,sbdvfhjvsgh"
            android:maxLines="1"
            android:singleLine="true" />


    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_input_layout"
        android:layout_alignBottom="@+id/text_input_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="123123" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input_layout"
        android:padding="@dimen/app_padding"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edit_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_username_normal"
            android:hint="@string/hint_enter_last_name"
            android:maxLines="1"
            android:singleLine="true">

        </EditText>


    </android.support.design.widget.TextInputLayout>


    <CheckBox
        android:id="@+id/checkbox_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input_layout2"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />

    <CheckBox
        android:id="@+id/checkbox_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/checkbox_a"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />

    <CheckBox
        android:id="@+id/checkbox_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/checkbox_b"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />

    <CheckBox
        android:id="@+id/checkbox_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkbox_c"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />


    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/button_green"
        android:text="@string/button_submit"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>
