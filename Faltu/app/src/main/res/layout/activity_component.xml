<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoomcar.prateek.faltu.activities.ComponentActivity">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/text_header"
        style="@style/text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_toolbar"
        android:layout_marginTop="@dimen/appbar_elevation"
        android:padding="@dimen/app_padding" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_header"
        android:padding="@dimen/app_padding">

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_username"
            android:hint="@string/hint_enter_first_name">

        </android.support.v7.widget.AppCompatEditText>


    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_layout"
        android:padding="@dimen/app_padding">

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_username"
            android:hint="@string/hint_enter_last_name">

        </android.support.v7.widget.AppCompatEditText>


    </android.support.design.widget.TextInputLayout>


    <CheckBox
        android:id="@+id/checkbox_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_layout2"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />

    <CheckBox
        android:id="@+id/checkbox_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkbox_a"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />

    <CheckBox
        android:id="@+id/checkbox_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkbox_b"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />

    <CheckBox
        android:id="@+id/checkbox_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkbox_c"
        android:layout_margin="2dp"
        android:button="@drawable/custom_check_box"
        android:padding="@dimen/app_padding"
        android:text="@string/default_text" />


      <Button
          android:id="@+id/button_submit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:textColor="@color/white"
          android:background="@color/button_green"
          android:textStyle="bold"
          android:text="@string/button_submit"/>


</RelativeLayout>
