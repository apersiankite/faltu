<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/zoom_primary_color</item>
        <item name="colorPrimaryDark">@color/zoom_primary_color</item>
        <item name="colorAccent">@color/button_green</item>
    </style>


    <style name="text_view_style" parent="Base.TextAppearance.AppCompat">
        <item name="android:text">@string/default_text</item>
        <item name="android:textColor">@color/button_green</item>
        <item name="android:textSize">@dimen/normal_text_size</item>

    </style>


    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="divider">@color/zoom_primary_color</item>
        <item name="showDividers">beginning</item>

    </style>

    <style name="AppTheme.Actionbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="divider">@color/white</item>
        <item name="showDividers">beginning</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.Toolbar">

    </style>

    <style name="MyCustomEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#FAFAFA</item>
        <item name="colorAccent">@color/strokeColor</item>
    </style>


    <style name="CalendarWeekDay" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_weekday</item>
    </style>

    <style name="CalendarHeader" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textStyle">bold</item>
    </style>



</resources>
